@model IEnumerable<ProductDashboardListDto>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="/dashboard/product/create">
            <h6 class="m-0 font-weight-bold text-primary">Create product</h6>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">PhotoUrl</th>
                        <th scope="col">Price</th>
                        <th scope="col">DiscountPrice</th>
                        <th scope="col">ReviewPoint</th>
                        <th scope="col">ReviewCount</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">PhotoUrl</th>
                        <th scope="col">Price</th>
                        <th scope="col">DiscountPrice</th>
                        <th scope="col">ReviewPoint</th>
                        <th scope="col">ReviewCount</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <th scope="row">@product.Id</th>
                            <td>@product.Name</td>
                            <td>
                                <img src="@product.PhotoUrl" width="80" height="80" />
                            </td>
                            <td>@product.Price</td>
                            <td>@product.DiscountPrice</td>
                            <td>@product.ReviewPoint</td>
                            <td>@product.ReviewCount</td>
                            <td>@product.IsActive</td>
                            <td>
                                <a href="/dashboard/product/update/@product.Id" class="btn btn-warning">Update</a>
                                <a href="/dashboard/product/remove/@product.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>