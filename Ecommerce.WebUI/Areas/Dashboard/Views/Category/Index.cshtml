@model IEnumerable<CategoryDashboardDto>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="/dashboard/category/create">
            <h6 class="m-0 font-weight-bold text-primary">Create category</h6>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col">UpdatedDate</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">IsDeleted</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col">UpdatedDate</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">IsDeleted</th>
                        <th scope="col"></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var category in Model)
                    {

                        <tr>
                            <th scope="row">@category.Id</th>
                            <td>@category.Name</td>
  
                            <td>@category.CreatedDate</td>
                            <td>@category.UpdatedDate</td>
                            <td>@category.IsActive</td>
                            <td>@category.IsDeleted</td>
                            <td>
                                <a href="/dashboard/category/update/@category.Id" class="btn btn-warning">Update</a>
                                <a href="/dashboard/category/remove/@category.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>